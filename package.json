{
  "name": "raizawa-blog",
  "private": true,
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "dev": "bun run build:content && vite",
    "build": "bun run build:content && bun run build:bundle",
    "build:content": "bun run scripts/build-posts.ts",
    "build:bundle": "vite build",
    "preview": "vite preview",
    "test": "bun run build:content && vitest run",
    "typecheck": "tsgo --noEmit",
    "lint": "oxlint -c .oxlintrc.jsonc --type-aware app/",
    "lint:fix": "oxlint -c .oxlintrc.jsonc --type-aware app/ --fix",
    "format": "nix fmt",
    "format:check": "nix fmt -- --fail-on-change"
  },
  "dependencies": {
    "@shikijs/markdown-it": "^3.21.0",
    "@shikijs/transformers": "^3.21.0",
    "@types/markdown-it": "^14.1.2",
    "hono": "^4.11.3",
    "honox": "^0.1.53",
    "js-yaml": "^4.1.1",
    "markdown-it": "^14.1.0",
    "shiki": "^3.21.0"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.8.0",
    "@hono/vite-dev-server": "^0.24.0",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "@typescript/native-preview": "^7.0.0-dev.20260109.1",
    "oxlint-tsgolint": "^0.11.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.16",
    "wrangler": "^4.58.0"
  }
}
